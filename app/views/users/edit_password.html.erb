
<h4>Changing Password...</h4>

<%= form_for(@user, :url => 'update_password' )  do |f| %>
  <% if @user.errors.any? %>
      <div id="error_explanation" class="alert-box [error]" style='width:400px'>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <p>
      Old Password:<br>
      <%= f.password_field :current_password %><br>
    </p>
    <p>
      New Password:<br>
      <%= f.password_field :password %><br>
    </p>
    <p>
      Confirm New Password:<br>
      <%= f.password_field :password_confirmation %><br>
    </p>
    
    <div class="actions">
      <%= f.submit 'Update Password', :class => 'button'   %>
    </div>
    

    <%= link_to "Cancel", club_member_assignments_path(current_club,current_member) %>
    
<% end -%>

 
<div style='width:550px;    text-align:center'>
 

  <div style=' align:center ;background-color:lightgray'>
    <h4 >  Scheduled Absences for: <em> <%= @member.full_name %> </em></h4>
  </div>
  

  <div style='width:550px'>
      <div style='float:left'> <%= paginate @absences %>     </div>
      <div style='float:right'><%= link_to 'New Absence', new_club_member_absence_path(params[:club_id],@member) %><div>
  </div>

</div>
 
<br/><br/>
<table>
  <thead>
    <tr>
      <th>Member Name</th>
      <th>Start Date</th>
      <th>End Date</th>
			
		 
      <th colspan='3'>Add/Change/Delete Member Absences</th>
 
    </tr>
  </thead>

  <tbody>
    <% @absences.each do |absence| %>
      <tr>
    		<td><%= absence.member_full_name %></td>
    		<td><%= absence.start_date.strftime("%m/%d/%Y") %></td>
    		<td><%= absence.end_date.strftime("%m/%d/%Y") %></td>


 
        <td><%= link_to 'Show', club_member_absence_path(params[:club_id],@member,absence) %></td>
        <td><%= link_to 'Edit', edit_club_member_absence_path(params[:club_id],@member,absence) %></td>
        <td><%= link_to 'Delete', club_member_absence_path(params[:club_id],@member,absence) ,   
         :data => {:confirm => 'Are you sure?' }    , method: :delete %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br />


 
<div style='width:550px;    text-align:center'>
 
  <div style=' align:center ;background-color:lightgray'>
    <h4 > Member Absences for <em> <%=current_club.name %> </em> </h4>
  </div>
        
  <br/>

  <div style='width:550px'>
      <div style='float:left'> <%= paginate @absences %>     </div>
  </div>





  <br/>

</div>
 

<table style='width:550px'>
  <thead>

		 
    <tr>
      <th style='text-align:center'>Member</th>
      <th style='text-align:center'> Start Date</th>
      <th style='text-align:center'>End Date</th>
    </tr>
  </thead>

  <tbody>
    <% @absences.each do |absence| %>
			<% member = Member.find(absence.member_id) %>
    		<td><%= member.full_name   %></td>
    		<td><%= absence.start_date.strftime("%m/%d/%Y") %></td>
    		<td><%= absence.end_date.strftime("%m/%d/%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

 
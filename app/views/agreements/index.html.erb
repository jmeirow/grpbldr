<h1>Listing agreements</h1>

<table>
  <tr>
    <th>Club</th>
    <th>From date</th>
    <th>Through date</th>
    <th>Club monthly rate</th>
    <th>Member monthly rate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @agreements.each do |agreement| %>
  <tr>
    <td><%= agreement.club_id %></td>
    <td><%= agreement.from_date %></td>
    <td><%= agreement.through_date %></td>
    <td><%= agreement.club_monthly_rate %></td>
    <td><%= agreement.member_monthly_rate %></td>
    <td><%= link_to 'Show', agreement %></td>
    <td><%= link_to 'Edit', edit_agreement_path(agreement) %></td>
    <td><%= link_to 'Delete', agreement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<h1>System Configurations</h1>

<table>
  <tr>
    <th>Key</th>
    <th>Value</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sys_configurations.each do |sys_configuration| %>
  <tr>

    <%

    value = sys_configuration.config_value.slice(0..10)
    value += '....' if value.length > 10


    %>

    <td><strong><%= sys_configuration.config_key %></strong></td>
    <td><%= value  %></td>
    <td ><em><%= sys_configuration.config_description.slice(0..50) + '....'  %></em></td>
    <td><%= link_to 'Show', sys_configuration %></td>
    <td><%= link_to 'Edit', edit_sys_configuration_path(sys_configuration) %></td>
    <td><%= link_to 'Destroy', sys_configuration, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Configuration', new_sys_configuration_path %>

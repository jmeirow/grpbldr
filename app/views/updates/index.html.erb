
<div style='padding-left:50px;width:800px'>

  <h1>Release History</h1>
  
 <div style='float:right'>
  <% if current_user_is_super_user? %>
    <%= link_to 'New Update', new_update_path %>
  <% end %>

</div><br/><br/><br/>
<div style='float:left'>
  <table width='800px'>
    <tr>
      <th>Date</th>
      <th>Release Number</th>
      <th>Description</th>
      <% if current_user_is_super_user? %>
        <td>Update</td>
      <% end %>

    </tr>

  <% @updates.each do |update| %>
    <tr>
      <td><%= "#{update.release_date.strftime('%m/%d/%Y')}" %></td>
      <td><%= "#{update.major.to_s}.#{update.minor.to_s}.#{update.patch.to_s}" %></td>
      <td><%= raw update.description %></td>


      <% if current_user_is_super_user? %>
        <td> <%= link_to "Update",  edit_update_path(update)  %> </td>
      <% end %>


    </tr>
  <% end %>
  </table>
</div>


</div>
<h4>Reset Password</h4>

<%= form_tag password_resets_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div ><p><%= submit_tag "Reset Password",    :class => "button" , :style => 'font-size:8pt;width:100px'  %></div>
<% end %>
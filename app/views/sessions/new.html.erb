 





<%= form_tag sessions_path do %>
 

    <label>Email Address:</label>
		    <%= text_field_tag :email, params[:email] %><br><br>
  


    <label>Password:</label>
    		<%= password_field_tag :password %>
  


  <div class="actions">
  		<p><%= submit_tag "Sign In",    :class => "button" , :style => 'font-size:8pt;width:100px'  %>
  </div>


	<br><br>


	<% if notice %>
	   <div id="error_explanation" class="alert-box failure">
				 <%= notice %> 
 		</div>
	<% end %>


	<br><br>

	<div>
	<%= link_to "Create Account", sign_up_path %> 

		<br/><br/>or..<br/><br/>

	<%= link_to "Register Organization", new_enrollment_path %>
	</div>
	<div style='margin-top 20px'>
  	<p><%= link_to "Forgot your password?", new_password_reset_path %></p>	
  	</div>

<% end %>
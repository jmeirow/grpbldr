



<%= form_for([current_club,@agenda_definition]) do |f| %>
  <% if @agenda_definition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@agenda_definition.errors.count, "error") %> prohibited this agenda_definition from being saved:</h2>

      <ul>
      <% @agenda_definition.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>




  
    <%= f.hidden_field :id %>
  

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "30x6" %>
  </div>


  <table>
    <tr>
      <td>Show Absent Members on Agenda? </td>      
      <td>Yes <%= f.radio_button :show_absent_members, "true" %> </td> 
      <td>No <%= f.radio_button :show_absent_members, "false" %></td>
    </tr>
    <tr>
      <td>Show This Meeing's Unfilled Roles on Agenda?  </td>
      <td>Yes <%= f.radio_button :show_this_meeting_open_roles, "true" %> </td>
      <td>No <%= f.radio_button :show_this_meeting_open_roles, "false" %></td>
    </tr>    
    <tr>
      <td>Show Next Meeting's Open Roles on Agenda?  </td>
      <td>Yes <%= f.radio_button :show_next_meeting_open_roles, "true" %> </td>
      <td>No <%= f.radio_button :show_next_meeting_open_roles, "false" %></td>
    </tr>
  </table>
    <div class="actions">
     <%= f.submit "Save Definition", :class => 'button' , :style => 'font-size:8pt;margin-top:20px'  %>
    </div>

<% end %>

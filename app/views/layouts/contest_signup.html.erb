<!DOCTYPE html>
<html>

  <!-- ***************************************************************** -->
  <!-- HTML HEAD AREA  -->
  <!-- ***************************************************************** -->

  <head>
    <title>Group Builder &copy;</title>

    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" %>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" %>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    

    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-33198229-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>


  
  </head>




  <!-- ***************************************************************** -->
  <!-- HTML BODY AREA                                                    -->
  <!-- ***************************************************************** -->

  <body  >

    <table style='width:960px;background-color:whitesmoke'>
      <tr><td>
    
    <!-- ***************************************************************** -->
    <!-- If current user is logged in, display user-nav menu area         -->
    <!-- ***************************************************************** -->    
    
   
      <%= render 'layouts/header' %>

       

        <div class='container' style='margin-top:20px;width:800px '>

          <div style='float:left;background-color:#63DB93;margin-left:15px;padding-left:10px;padding-right:10px;border-radius:5px; '>     
           
            <span style='font-weight:bold'>  Club Administration  </span>
            <br/><br/>


            <% if session[:logged_in_admin] %>

              <strong>
              <%= link_to "Return to Main Menu", club_member_assignments_path(session[:club_id], current_member) %>
              </strong>
              <br/>    
              <br/>  

    
                
 
            <br/><br/>
             <br/><br/>
             <br/><br/>
             <br/><br/>
             <br/><br/>              
             <% end %>
             
            </div> 



 

 


          </div>

         <!-- ***************************************************************** -->
         <!-- Yield below... this is where the currently selected view displays -->
         <!-- ***************************************************************** -->

        
         <div class='container' style='margin-left:170px'  >
             
              <%= yield %>
             
        </div>

  


     </div>
      
     <%= render 'layouts/footer' %>

   </td></tr></table>
  </body>

</html>

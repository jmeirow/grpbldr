<!DOCTYPE html>
<html>

  <!-- ***************************************************************** -->
  <!-- HTML HEAD AREA  -->
  <!-- ***************************************************************** -->

  <head>
     <title>GroupBuilder &copy;</title>

    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" %>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" %>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    




  
  </head>




  <!-- ***************************************************************** -->
  <!-- HTML BODY AREA                                                    -->
  <!-- ***************************************************************** -->

  <body  >
    
    <!-- ***************************************************************** -->
    <!-- If current user is logged in, display user-nav menu area         -->
    <!-- ***************************************************************** -->    
    
   
      <%= render 'layouts/header' %>

       

        <div class='container' style='margin-top:20px; margin-left:15px;padding-right:200px; '>

          <div style='float:left;background-color:#63DB93;padding-left:10px;padding-right:10px;border-radius:5px;   '>    
           
            <span style='font-weight:bold'>  Member Functions  </span>
            <br/><br/>



            <div style='font-size:9pt'>

               <div style='font-size:9pt;font-weight:bold'>
                <%= link_to "Sign Up for a Role", signup_for_role_club_member_assignments_path(params[:club_id], current_member) %>  <br/>    
                

                  <%  meeting = current_club.next_meeting  %>
                  <%  if meeting.nil? == false %>
                    <%=  link_to "Next Meeting's Agenda", club_meeting_print_path(params[:club_id], meeting, 0)  , :target => "_blank" %><br/> 

                    <%=  link_to "Beta Meeting Agenda", club_meeting_agenda_definition_print_path(params[:club_id], meeting, AgendaDefinition.regular_meeting(params[:club_id]))  , :target => "_blank" %><br/> 
                  
                    <%=  link_to "Next Meeting's Notes",  club_meeting_print_notes_setup_path(params[:club_id], meeting)   %>
                  <%  end %>



 
                 
                </div>

            <hr style="height:2px;border:none;background-color:green;color:green" />


            <%= link_to "My Upcoming Activity", club_member_assignments_path(params[:club_id], current_member) %> <br/>  
           
            <%= link_to "My Previous Activity", past_activity_club_member_assignments_path(params[:club_id],current_member) %>   <br/>  
           

            <%= link_to "Meetings", club_meetings_path(params[:club_id]) %><br>
            <%= link_to "Member Directory", club_members_path(params[:club_id]) %>  <br/>  
            <%= link_to "Absences", club_member_absences_path(params[:club_id],current_member) %>  <br/>  
  


            <br/>                
            


             <% if session[:logged_in_admin] %>
               <hr style="height:2px;border:none;background-color:green;color:green" />

               <span style='font-weight:bold'>  Club Administration  </span>

               <br/> <br/> 

 
              <%= link_to "Absences", list_club_absences_path(params[:club_id]) %><br>
              <%= link_to "Meetings", club_meetings_path(params[:club_id]) %><br>
              <%= link_to "Members", club_members_path(params[:club_id]) %><br>
              <%= link_to "Administration",  admin_path(params[:club_id])  %><br> 


              
             <% end %>
             
            </div> 

            <div>

              <% if current_user_is_super_user? %>
                
                <hr style="height:2px;border:none;background-color:green;color:green" />
                

                  
                  
                  <%= link_to "System Administration", sysadmins_path %><br>

                
                <% end %>
            </div> 

            <hr style="height:2px;border:none;background-color:green;color:green" />



          </div>

         <!-- ***************************************************************** -->
         <!-- Yield below... this is where the currently selected view displays -->
         <!-- ***************************************************************** -->

        
         <div class='container' style='margin-left:150px'  >
          <%= yield %>


        </div>

  


     </div>
      
    <%= render 'layouts/footer' %>

  </body>

</html>

<!DOCTYPE html>
<html>

  <!-- ***************************************************************** -->
  <!-- HTML HEAD AREA  -->
  <!-- ***************************************************************** -->

  <head>
    <title>GroupBuilder</title>

    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" %>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" %>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    




  
  </head>




  <!-- ***************************************************************** -->
  <!-- HTML BODY AREA                                                    -->
  <!-- ***************************************************************** -->

  <body>
    
    <!-- ***************************************************************** -->
    <!-- If current user is logged in, display user-nav menu area         -->
    <!-- ***************************************************************** -->    
    
    <div style='padding-left:10px;  margin-top:20px; ' >
       
       <span style='font-size:20pt;padding-bottom:5px'>GroupBuilder </span>

        

       Version <%= link_to Update.current, updates_path, :target => '_blank' %>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span style-'width:600px;float:right'> <a href='/updates' target='_blank'>What's new? Software updates</a></span> 

       <hr style="height:5px;border:none;background-color:green;color:green" />

        <div class='container' style='margin-top:20px; margin-left:15px;padding-right:200px; '>

          <div style='float:left; '>    
           
            <span style='font-weight:bold'>  System Administration  </span>
            <br/><br/>


             <% if current_user_is_super_user? %>

               <%= link_to "Return to Main Menu", club_member_assignments_path(session[:club_id], current_member) %> <br/>    
               <br/>  
                  <%= link_to "Test Email Config", test_email_path %><br>
                  <%= link_to "Revoke Admin", sessions_revoke_admin_path %><br>
                  <%= link_to "Revoke Super User", sessions_revoke_super_user_path %><br/> 
                  <a href='#'>Reports </a><br/> 
                  <%= link_to "All Members", all_members_path %><br>  
                  <%= link_to "Configuration Parameters", sys_configurations_path %> <br/>  
                  <%= link_to "Software Release Info", updates_path, :target => '_blank' %> <br/>  
                  <br/>  <br/>  

              <div style='font-size:7pt'>
              <% user = current_user %>
              Logged in as 
              <%= user.email %>  
            </div>  
              
             <% end %>
             
            </div> 


           

 


          </div>

         <!-- ***************************************************************** -->
         <!-- Yield below... this is where the currently selected view displays -->
         <!-- ***************************************************************** -->

        
         <div class='container' style='margin-left:250px'  >
          <%= yield %>


        </div>

  


     </div>
      

  </body>

</html>

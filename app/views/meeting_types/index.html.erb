<h1>Meeting Types</h1>



 

<table>
   <tr>
    <th>Description</th>
    <th>Hour</th>
    <th>Minute</th>
    <th>AM/PM</th>
   
    <th colspan='2' align='right'><%= link_to 'New Meeting type', new_club_meeting_type_path %></th>
 
  </tr>

<% @meeting_types.each do |meeting_type| %>
  <tr>
    <td><%= meeting_type.description %></td>
    <td><%= meeting_type.hour %></td>
    <td><%= meeting_type.minute %></td>
    <td><%= meeting_type.am_pm %></td>
  
   
    <td><%= link_to 'Edit', edit_club_meeting_type_path(@club,meeting_type) %></td>

    <%if meeting_type.is_default == true %>
        <td>Can't delete defaul meeting type.</td>
    <% else %>

    <td><%= link_to 'Destroy', club_meeting_type_path(@club,meeting_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>


  </tr>
<% end %>
</table>


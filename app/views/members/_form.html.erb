 


	<%= form_for([ @club , @member ] ,   :class => 'nice') do |f| %>
	  <% if @member.errors.any? %>
	    <div id="error_explanation" class="alert-box error" style='width:475px'>
	      <h6><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h6>

	      <ul>
	      <% @member.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>


			<br>


			<table>
				<tr>

					<td>
						<label>First Name:</label>
						<%= f.text_field :first_name, :class => 'input-text' %><br>
									
						<label>Last Name:</label>
						<%= f.text_field :last_name, :class => 'input-text'  %><br>
					 
						<label>Address 1:</label>
						<%= f.text_field :address_one, :class => 'input-text'  %><br>

						<label>Address 2:</label>
						<%= f.text_field :address_two, :class => 'input-text'  %><br>

						<label>City:</label>
						<%= f.text_field :city, :class => 'input-text'  %><br>

						<label>State:</label>
						<%= f.text_field :state, :class => 'input-text'  %><br>

						<label>Zip Code:</label>
						<%= f.text_field :zip_code, :class => 'input-text'  %><br>


					</td>


					<td>
							<label>Email Address:</label>
							<%= f.text_field :email, :class => 'input-text'  %><br>

							<label>Phone:</label>
							<%= f.text_field :phone, :class => 'input-text'  %><br>

							<label>Mobile Phone:</label>
							<%= f.text_field :mobile_phone, :class => 'input-text'  %><br>

							<label>Assignable:</label>
							<%= f.check_box :assignable   %><br>

							<label>Club Start Date:</label>
							<%= f.text_field :start_date_display, :class => 'input-text'  %><br>

							<label>Club End Date:</label>
							<%= f.text_field :end_date_display, :class => 'input-text'  %><br>



					</td>



				</tr>




		
	 

	  <div class="actions">
	     <%= f.submit nil, :class => 'button'   %>
	  </div>
	<% end %>


 

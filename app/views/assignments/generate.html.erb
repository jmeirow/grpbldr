 
<h5>Listing Assigned Roles</h5>
 

<table>
  <tr>
    <th>Date</th>
    <th>Role</th>
    <th>Member Assigned</th>
    <th >Edit Assignment</th>
  </tr>

<% @assignments.each do |assignment| %>
  <tr>
		<td><%= assignment.meeting.meeting_date.strftime("%m/%d/%Y") %></td>
		<td><%= assignment.role.description %></td>
		<td><%= assignment.member.full_name %></td>
			
    <td><%= link_to 'Show', club_member_assignment_path(params[:club_id],@member,assignment) %></td>
    <td><%= link_to 'Edit', edit_club_member_assignment_path(params[:club_id],@member,assignment) %></td>
    <td><%= link_to 'Delete', club_member_assignment_path(params[:club_id],@member,assignment), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
<div style='font-size:7pt'>
<%= link_to 'Generate Assignment', forassignment_meetings_path %>
</div>
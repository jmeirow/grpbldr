  $('#club').change(function() 
  {
    $('#find_role').submit()

  }); 

  $('#free').change(function() 
  {
    $('#find_role').submit()

  });


  $('#role').change(function() 
  {
    $('#find_role').submit()

  });  

  $('#assignments').change(function() 
  {
    $('#find_role').submit()
 
  });  
  
  
  $('#mybutton').click(function() 
  {
    $('#did_user_submit').val('true');
    $('#submit_request').submit()

  });
  
 
 
</script>